


<Door>:
    size_hint: None, None
    size: 135, 70
    pos_hint: {"center_x": 0.56, "center_y": 0.83}  
    canvas:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 1, 1, 1 
<Monster>:
    size_hint: None, None
    size: 50, 50
    canvas:
        Color:
            rgba: 0, 1, 0, 1  # สีของมอนสเตอร์
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 1, 1, 1 



<MenuScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg" 
                pos: self.pos
                size: self.size

        Button:
            text: "Start Game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            background_normal: "images/background/cave.jpg"
            on_release:
                app.root.current = "game"
        Button:
            text: "Quit game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.stop()

<GameScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"
                pos: self.pos
                size: self.size

        Door:
            id: door

        Monster:
            id: monster_1
        Monster:
            id: monster_2
        Monster:
            id: monster_3

