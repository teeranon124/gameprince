<MenuScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/startgame.png" 
                pos: self.pos
                size: self.size

        Button:
            text: "Start Game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            on_release:
                app.play_button_sound()
                app.root.current = "stage_one"
        Button:
            text: "Quit game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.play_button_sound()
                app.stop()

<GameOver>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"
                pos: self.pos
                size: self.size
        Label:
            text: "Game Over!"
            font_size: 48
            color: 1, 0, 0, 1  # สีแดง
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "center_y": 0.6}  # ตำแหน่งข้อความ
        Button:
            text: "Quit game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.play_button_sound()
                app.stop()

