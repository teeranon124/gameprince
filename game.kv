<GameScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"
                pos: self.pos
                size: self.size

        Label:
            id: timer_label
            text: "Time Left: 150"
            font_size: 24
            color: 1, 1, 1, 1  # สีขาว
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.9, "center_y": 0.95}

        Label:
            id: level_label
            text: "Stage 1"
            font_size: 28
            bold: True
            color: 1, 1, 1, 1
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.1, "center_y": 0.95}

        Door:
            id: door
        Minion:
            id: monster_1
        Minion:
            id: monster_2
        Minion:
            id: monster_3
        Minion:
            id: monster_4
        Minion:
            id: monster_5
        Minion:
            id: monster_6
        Minion:
            id: monster_7
        Centaur:
            id: monster_8



