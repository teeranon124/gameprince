<Door>:
    size_hint: None, None
    size: 135, 70
    pos_hint: {"center_x": 0.56, "center_y": 0.83}  
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
<MenuScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg" 
                pos: self.pos
                size: self.size

        Button:
            text: "Start Game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            background_normal: "images/background/cave.jpg"
            on_release:
                app.root.current = "game"
        Button:
            text: "Quit game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.stop()


<GameScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"  
                pos: self.pos
                size: self.size
        Label:
            text: "Protect"
            font_size: 20
            pos_hint: {"center_x": 0.5, "center_y": 0.9}
        Door:
            id: door
        

<GameScreenTwo>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"  
                pos: self.pos
                size: self.size
        Door:
            id: door