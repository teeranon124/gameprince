<Door>:
    size_hint: None, None
    size: 135, 70
    pos_hint: {"center_x": 0.56, "center_y": 0.83}  
    canvas:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 1, 1, 1 

<Minion>:
    size_hint: None, None
    size: 50, 50
    canvas:
        Color:
            rgba: 0, 1, 0, 1  # สีของมินเนียน
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 1, 1, 1, 1 

<MenuScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/startgame.png" 
                pos: self.pos
                size: self.size

        Button:
            text: "Start Game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.58}
            on_release:
                app.root.current = "game"
        Button:
            text: "Quit game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.stop()

<GameOver>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"
                pos: self.pos
                size: self.size
        Label:
            text: "Game Over!"
            font_size: 48
            color: 1, 0, 0, 1  # สีแดง
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "center_y": 0.6}  # ตำแหน่งข้อความ
        Button:
            text: "Quit game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.stop()

<GameWin>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"
                pos: self.pos
                size: self.size
        Label:
            text: "Win"
            font_size: 48
            color: 0, 1, 0, 1  # สีเขียว
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "center_y": 0.6}  # ตำแหน่งข้อความ
        Button:
            text: "Quit game"
            font_size: 24
            size_hint: 0.3, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_release:
                app.stop()

<GameScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                source: "images/background/cave.jpg"
                pos: self.pos
                size: self.size

        Label:
            id: timer_label
            text: "Time Left: 150"
            font_size: 24
            color: 1, 1, 1, 1  # สีขาว
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.9, "center_y": 0.95}

        Label:
            id: level_label
            text: "Stage 1"
            font_size: 28
            bold: True
            color: 1, 1, 1, 1
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.1, "center_y": 0.95}

        Door:
            id: door
        Minion:
            id: monster_1


